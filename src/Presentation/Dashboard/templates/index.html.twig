{% extends '@layout/dynamic-layout.html.twig' %}

{% block page_title %}{{ 'dashboard.title' | trans }}{% endblock %}

{% block page_content %}
    <div class="row row-deck row-cards">

        <div class="row row-cards">
            <div class="col-sm-6 col-lg-3"
                 hx-get="{{ path('dashboard.embed.mail_summary') }}"
                 hx-trigger="revealed"
            >
            </div>
            <div class="col-sm-6 col-lg-3"
                 hx-get="{{ path('dashboard.contacts.summary') }}"
                 hx-trigger="revealed"
            >
            </div>
            <div class="col-sm-6 col-lg-3"
                 hx-get="{{ path('dashboard.companies.summary') }}"
                 hx-trigger="revealed"
            >
            </div>
        </div>
        <div class="row row-cards">
            <div class="col-sm-6 col-lg-3"
                 hx-get="{{ path('dashboard.embed.worker_status') }}"
                 hx-trigger="revealed, every 10s"
            >
            </div>
        </div>
    </div>
{% endblock %}
