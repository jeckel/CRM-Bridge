{% if pageCount > 1 %}
<ul class="pagination m-0 ms-auto">
        {% if first is defined %}
            {% if current != first %}
            <li class="page-item ">
                <a
                    class="page-link"
                    hx-get="{{ path(route, query|merge({(pageParameterName): first})) }}"
                    hx-target="{{ target }}"
                    hx-swap="outerHTML"
                    href="#">
                    <span class="ti ti-chevron-left-pipe"></span>
                    first
                </a>
            </li>
            {% else %}
            <li class="page-item disabled">
                <a
                    class="page-link"
                    href="#"
                    tabindex="-1"
                    aria-disabled="true">
                    <span class="ti ti-chevron-left-pipe"></span>
                    first
                </a>
            </li>
            {% endif %}
        {% endif %}

        {% if previous is defined %}
            <li class="page-item">
                <a
                    class="page-link"
                    href="#"
                    hx-get="{{ path(route, query|merge({(pageParameterName): previous})) }}"
                    hx-target="{{ target }}"
                    hx-swap="outerHTML"
                >
                    <span class="ti ti-chevron-left"></span>
                    prev
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <a
                    class="page-link"
                    href="#"
                    tabindex="-1"
                    aria-disabled="true"
                >
                    <span class="ti ti-chevron-left"></span>
                    prev
                </a>
            </li>
        {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li class="page-item"><a
                    class="page-link"
                    href="#"
                    hx-get="{{ path(route, query|merge({(pageParameterName): page})) }}"
                    hx-target="{{ target }}"
                    hx-swap="outerHTML"
                >{{ page }}</a></li>
        {% else %}
            <span class="page-item active"><a class="page-link" href="#">{{ page }}</a></span>
        {% endif %}
    {% endfor %}

    {% if next is defined %}
        <li class="page-item">
            <a
                class="page-link"
                href="#"
                hx-get="{{ path(route, query|merge({(pageParameterName): next})) }}"
                hx-target="{{ target }}"
                hx-swap="outerHTML"
            >
                next
                <span class="ti ti-chevron-right"></span>
            </a>
        </li>
    {% else %}
        <li class="page-item disabled">
            <a
                class="page-link"
                href="#"
                tabindex="-1"
                aria-disabled="true"
            >
                next
                <span class="ti ti-chevron-right"></span>
            </a>
        </li>
    {% endif %}

    {% if last is defined %}
        {% if current != last %}
            <li class="page-item ">
                <a
                    class="page-link"
                    hx-get="{{ path(route, query|merge({(pageParameterName): last})) }}"
                    hx-target="{{ target }}"
                    hx-swap="outerHTML"
                    href="#">
                    last
                    <span class="ti ti-chevron-right-pipe"></span>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <a
                    class="page-link"
                    href="#"
                    tabindex="-1"
                    aria-disabled="true">
                    last
                    <span class="ti ti-chevron-right-pipe"></span>
                </a>
            </li>
        {% endif %}
    {% endif %}

    </ul>
{% endif %}
