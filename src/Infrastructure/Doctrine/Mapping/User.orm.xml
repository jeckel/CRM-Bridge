<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity
        name="App\Infrastructure\Doctrine\EntityModel\User"
        table="users"
        repository-class="App\Infrastructure\Doctrine\Repository\UserRepository"
    >
        <id name="id" type="user_id" column="user_id">
            <generator strategy="NONE"/>
        </id>
        <field name="username" type="string" length="180" nullable="false" unique="true" />
        <field name="firstname" type="string" length="180" nullable="true" />
        <field name="lastname" type="string" length="180" nullable="true" />
        <field name="email" type="email" length="180" nullable="false" unique="true" />
        <field name="roles" type="json" nullable="false" />
        <field name="password" type="string" length="180" nullable="false" />
    </entity>
</doctrine-mapping>
