<!--            field="mails"-->
<!--            orphan-removal="false"-->
<!--            mapped-by="mailbox"-->
<!--        >-->
<!--            <cascade>-->
<!--                <cascade-all/>-->
<!--            </cascade>-->
<!--        </one-to-many>-->
    </entity>
</doctrine-mapping>
