<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity
        name="App\Component\WebMail\Domain\Entity\ImapAccount"
        table="imap_account"
        repository-class="App\Component\WebMail\Infrastructure\Doctrine\Repository\ImapAccountRepository"
    >
        <id name="id" type="imap_account_id" column="imap_account_id">
            <generator strategy="NONE"/>
        </id>
        <field name="name" type="string" length="180" nullable="false"/>
        <field name="uri" type="string" length="180" nullable="false" unique="true"/>
        <field name="login" type="string" length="180" nullable="false"/>
        <field name="password" type="string" length="180" nullable="false"/>
        <one-to-many
            mapped-by="account"
            target-entity="App\Component\WebMail\Domain\Entity\ImapMailbox"
            field="mailboxes"
            orphan-removal="true"
        >
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
