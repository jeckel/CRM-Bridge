<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity
        name="App\Component\Contact\Domain\Entity\ContactActivity"
        table="contact_activity"
    >
        <id name="id" type="contact_activity_id" column="contact_activity_id">
            <generator strategy="NONE"/>
        </id>
        <field name="date" type="datetime_immutable" nullable="false" />
        <field name="subject" type="text" nullable="false" />
        <field name="description" type="text" nullable="false" />
        <many-to-one
            field="contact"
            target-entity="App\Component\Contact\Domain\Entity\Contact"
        >
            <join-column
                name="contact_id"
                on-delete="CASCADE"
                nullable="false"
                referenced-column-name="contact_id"
            />
        </many-to-one>
    </entity>
</doctrine-mapping>
