<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity
        name="App\Component\CardDav\Domain\Entity\CardDavAddressBook"
        table="card_dav_address_book"
        repository-class="App\Component\CardDav\Infrastructure\Doctrine\Repository\CardDavAddressBookRepository"
    >
        <id name="id" type="card_dav_address_book_id" column="card_dav_address_book_id">
            <generator strategy="NONE"/>
        </id>
        <field name="name" type="string" length="180" nullable="false" />
        <field name="uri" type="string" length="255" nullable="false" unique="true" />
        <field name="enabled" type="boolean" nullable="false" />
        <field name="lastSyncToken" type="string" length="255" nullable="true" />
        <many-to-one
            field="account"
            target-entity="App\Component\CardDav\Domain\Entity\CardDavAccount"
            inversed-by="addressBooks"
        >
            <join-column
                name="card_dav_account_id"
                on-delete="CASCADE"
                nullable="false"
                referenced-column-name="card_dav_account_id"
            />
        </many-to-one>
    </entity>
</doctrine-mapping>
